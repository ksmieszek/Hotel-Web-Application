@model Firma.Data.Data.CMS.Posilki

@{
    ViewData["Title"] = "Create";
}

<div class="d-flex flex-column align-items-center">
    <h3>Dodaj posiłek</h3>
    <hr />
    <div class="row w-100 justify-content-center">
        <div class="col-md-4 p-5 bg-white" style="border-radius: 10px;">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="NazwaPolska" class="control-label"></label>
                    <input asp-for="NazwaPolska" class="form-control" />
                    <span asp-validation-for="NazwaPolska" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="NazwaAngielska" class="control-label"></label>
                    <input asp-for="NazwaAngielska" class="form-control" />
                    <span asp-validation-for="NazwaAngielska" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="UrlZdjecia" class="control-label"></label>
                    <input asp-for="UrlZdjecia" class="form-control" />
                    <span asp-validation-for="UrlZdjecia" class="text-danger"></span>
                </div>
                <div class="d-flex justify-content-end align-items-center mt-5">
                    <a asp-action="Index"><svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="#000" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M19 12H6M12 5l-7 7 7 7" /></svg></a>
                    <input type="submit" value="Zapisz" class="btn btn-success ml-4">
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
