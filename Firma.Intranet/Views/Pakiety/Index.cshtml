@model IEnumerable<Firma.Data.Data.CMS.Pakiety>

@{
    ViewData["Title"] = "Index";
}

<div class="d-flex flex-column align-items-center mb-5">
    <a class="btn btn-success" asp-action="Create" role="button">Dodaj pakiet<svg class="align-text-top ml-1" xmlns="http://www.w3.org/2000/svg" width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="#fff" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"></circle><line x1="12" y1="8" x2="12" y2="16"></line><line x1="8" y1="12" x2="16" y2="12"></line></svg></a>
</div>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Tytul)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Czas)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Posilki)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IloscOsob)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cena)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td class="align-baseline">
                @Html.DisplayFor(modelItem => item.Tytul)
            </td>
            <td class="align-baseline">
                @Html.DisplayFor(modelItem => item.Czas)
            </td>
            <td class="align-baseline">
                @Html.DisplayFor(modelItem => item.Posilki)
            </td>
            <td class="align-baseline">
                @Html.DisplayFor(modelItem => item.IloscOsob)
            </td>
            <td class="align-baseline">
                @Html.DisplayFor(modelItem => item.Cena)
            </td>
            <td class="align-baseline text-right">
                <a style="margin: 5px 3px;" class="btn btn-primary btn-sm" role="button" asp-action="Edit" asp-route-id="@item.IdPokoju">Edytuj<svg class="align-text-bottom ml-1" xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="#ffffff" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polygon points="16 3 21 8 8 21 3 21 3 16 16 3"></polygon></svg></a>
                <a style="margin: 5px 3px; color: white !important;" class="btn btn-secondary btn-sm" role="button" asp-action="Details" asp-route-id="@item.IdPokoju">Szczegóły<svg class="align-text-bottom ml-1" xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="#fff" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"></circle><line x1="12" y1="16" x2="12" y2="12"></line><line x1="12" y1="8" x2="12.01" y2="8"></line></svg></a>
                <a style="margin: 5px 3px;" class="btn btn-danger btn-sm" role="button" asp-action="Delete" asp-route-id="@item.IdPokoju">Usuń<svg class="align-text-bottom ml-1" xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="#fff" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="3 6 5 6 21 6"></polyline><path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path><line x1="10" y1="11" x2="10" y2="17"></line><line x1="14" y1="11" x2="14" y2="17"></line></svg></a>
            </td>
        </tr>
}
    </tbody>
</table>
