@model Firma.Data.Data.Sklep.Towar

@{
    ViewData["Title"] = Model.Nazwa;
    Layout = "~/Views/Shared/_SklepLayout.cshtml";
}

<div class="margin-top col s10" style="display: flex; flex-direction: column;">
    <div style="display: flex;">
        <div><img src=@Model.UrlZdjecia style="width: 650px; height: 440px;" /></div>
        <div style="display: flex; flex-direction: column; margin-left: 50px; justify-content: space-between; width: 100%;">
            <div><h5>@Model.Nazwa</h5></div>
            <div>
                <p style="width: 400px;">@Model.KrotkiOpis</p>
            </div>
            <div style="align-self: flex-end;">
                <div style="font-size: 26px; text-align: right; margin-bottom: 10px;">@Model.Cena.ToString("0.00") zł</div>
                <div style="display: flex; align-items: center;">
                    <select class="browser-default" style="margin-right: 20px; border-radius: 5px; height: auto;">
                        <option value="1" selected>1</option>
                        <option value="2">2</option>
                        <option value="3">3</option>
                    </select>
                    <a href="@Url.Action("DodajDoKoszyka", "Koszyk", new { id = Model.IdTowaru }, "")" style="display: flex; flex-shrink: 0; align-items: center; padding: 10px; background: #d50000; font-weight: bold; color: white; margin: 0; border-radius: 10px; ">Do koszyka<i class="material-icons right">add_shopping_cart</i></a>
                </div>

            </div>
        </div>
    </div>
    <div style="width: 800px; margin-top: 50px;">@Model.Opis</div>
    <a asp-action="Index" style="margin-top: 100px;"><svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="#000" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M19 12H6M12 5l-7 7 7 7" /></svg></a>
</div>














